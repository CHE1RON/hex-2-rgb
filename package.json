{
  "keywords": [
    "rgb",
    "rgba",
    "hex",
    "alpha",
    "color",
    "convert",
    "typescript"
  ],
  "author": "Florian Fehrenbacher",
  "license": "ISC",
  "name": "@help-me/hex-2-rgb",
  "repository": {
    "type": "git",
    "url": "https://github.com/flofehrenbacher/hex-2-rgb.git"
  },
  "version": "1.4.0",
  "description": "lightweight typescript function to convert hexes of format #rrggbb to rgb(x,y,z) or rgba(x,y,z,a)",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "prebuild": "rimraf dist",
    "build": "npm run test && tsc && esbuild ./src/index.ts --format=esm --outfile=./dist/index.mjs",
    "presize": "npm run build",
    "size": "size-limit",
    "prepublishOnly": "npm run build && size-limit"
  },
  "size-limit": [
    {
      "limit": "300 B",
      "path": "dist/index.js"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.3",
    "@types/jest": "^27.0.1",
    "esbuild": "^0.12.23",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "size-limit": "^5.0.3",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.5"
  }
}
